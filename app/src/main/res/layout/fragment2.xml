<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sec.myapplication.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cotextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="@mipmap/co"/>

                <TextView
                    android:id="@+id/no2textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="@mipmap/no2" />

                <TextView
                    android:id="@+id/so2textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:background="@mipmap/so2"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/o3textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="@mipmap/o3"/>

                <TextView
                    android:id="@+id/pm25textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="@mipmap/pm2"/>

                <TextView
                    android:id="@+id/temtextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@mipmap/co"
                    android:layout_alignTop="@mipmap/co"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans"/>


            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>